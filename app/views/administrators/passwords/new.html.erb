<h2>Forgot your password?</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>


        <div class="form-group">
          <%= f.label :email, class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= f.email_field :email, class: "form-control", autofocus: true, :placeholder => "Email" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
            <%= f.submit "Reset my password", class: "btn btn-primary" %>
          </div>
        </div>

    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= render "administrators/shared/links" %>
      </div>
    </div>
  </div>
</div>