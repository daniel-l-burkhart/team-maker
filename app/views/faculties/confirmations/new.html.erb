<h2>Resend confirmation instructions</h2>

<br/><br/>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {class: 'form-horizontal', method: :post}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.email_field :email, class: 'form-control', autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>

    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit 'Resend Confirmation Instructions', class: 'btn btn-primary' %>
      </div>
    </div>


<% end %>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-6">
    <%= render 'faculties/shared/links' %>
  </div>
</div>
