<div class="nested-fields" class="form-horizontal">

  <div class="form-group">
    <%= f.label :content, 'Course Name ', class: 'col-sm-2 control-label' %>

    <div class="col-sm-6">

      <%= f.text_field :content, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :priority, ' Priority ', class: 'col-sm-2 control-label' %>

    <div class="col-sm-6">

      <%= f.select(:priority, Question::PRIORITIES, class: 'form-control') %>

    </div>

    <%= link_to_remove_association 'Remove Question', f, class: 'btn btn-primary' %>
  </div>
</div>