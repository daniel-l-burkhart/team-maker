<div class="form-group">
  <%= f.label :name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-6">
    <%= f.text_field :name, class: 'form-control', autofocus: true, :placeholder => 'Name' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :student_id, 'Student Id', class: 'col-sm-2 control-label' %>
  <div class="col-sm-6">
    <%= f.text_field :student_id, class: 'form-control', autofocus: true, :placeholder => 'Student ID' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: 'col-sm-2 control-label' %>
  <div class="col-sm-6">
    <%= f.email_field :email, class: 'form-control', autofocus: true, :placeholder => 'Email' %>
  </div>
</div>
